generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model School {
  id          String       @id @default(uuid())
  code        String       @unique @db.VarChar(64)
  name        String       @db.VarChar(255)
  description String?      @db.Text
  status      SchoolStatus @default(ACTIVE)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  sessions Session[]
  students Student[]
  teachers Teacher[]

  @@index([status])
  @@map("schools")
}

enum SchoolStatus {
  ACTIVE
  INACTIVE
}

model Teacher {
  id           String   @id @default(uuid())
  schoolId     String
  name         String   @db.VarChar(255)
  email        String   @unique @db.VarChar(255)
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  school   School           @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  sessions Session[]
  reviews  LearningReview[]

  @@index([schoolId])
  @@map("teachers")
}

model Session {
  id              String        @id @default(uuid())
  sessionCode     String?       @unique @db.VarChar(32)
  title           String        @db.VarChar(100)
  description     String?       @db.VarChar(500)
  schoolId        String
  teacherId       String
  themeId         String
  status          SessionStatus @default(PREPARING)
  maxParticipants Int           @default(50)
  startDate       DateTime?
  endDate         DateTime?
  progressMode    ProgressMode  @default(UNIFORM)
  passcodeHash    String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  school          School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher         Teacher           @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  theme           Theme             @relation("PrimarySessionTheme", fields: [themeId], references: [id])
  selectableThemes SessionTheme[]
  students        Student[]
  responses       StudentResponse[]
  opinionMappings OpinionMapping[]
  learningLogs    LearningLog[]

  @@index([schoolId])
  @@index([teacherId])
  @@index([themeId])
  @@index([status])
  @@index([createdAt])
  @@map("sessions")
}

enum SessionStatus {
  PREPARING
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum ProgressMode {
  UNIFORM
}

model Theme {
  id              String      @id @default(uuid())
  title           String      @db.VarChar(255)
  description     String?     @db.Text
  imageUrl        String?     @db.Text
  worldviewCardId String?
  status          ThemeStatus @default(ACTIVE)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  primarySessions Session[]     @relation("PrimarySessionTheme")
  sessionOptions  SessionTheme[]
  questions       Question[]

  @@index([status])
  @@map("themes")
}

model SessionTheme {
  id        String   @id @default(uuid())
  sessionId String
  themeId   String
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  theme   Theme   @relation(fields: [themeId], references: [id], onDelete: Cascade)

  @@unique([sessionId, themeId])
  @@index([sessionId])
  @@index([themeId])
  @@map("session_themes")
}

enum ThemeStatus {
  ACTIVE
  INACTIVE
}

model Question {
  id           String       @id @default(uuid())
  themeId      String
  questionText String       @db.Text
  order        Int
  questionType QuestionType @default(YES_NO_UNKNOWN)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  theme     Theme             @relation(fields: [themeId], references: [id], onDelete: Cascade)
  responses StudentResponse[]

  @@unique([themeId, order])
  @@index([themeId])
  @@index([order])
  @@map("questions")
}

enum QuestionType {
  YES_NO_UNKNOWN
}

model Student {
  id             String                @id @default(uuid())
  name           String?               @db.VarChar(255)
  email          String?               @db.VarChar(255)
  schoolId       String
  sessionId      String
  progressStatus StudentProgressStatus @default(NOT_STARTED)
  joinedAt       DateTime              @default(now())
  lastAccessAt   DateTime              @updatedAt

  school          School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  session         Session           @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  bigFiveResult   BigFiveResult?
  responses       StudentResponse[]
  groupActivities GroupActivity[]
  learningLogs    LearningLog[]

  @@index([schoolId])
  @@index([sessionId])
  @@index([progressStatus])
  @@index([lastAccessAt])
  @@map("students")
}

enum StudentProgressStatus {
  NOT_STARTED
  BIG_FIVE
  THEME_SELECTION
  MAIN_PAGE
  GROUP_ACTIVITY
  BRIEFING
  QUESTIONS
  COMPLETED
}

model BigFiveResult {
  id                String   @id @default(uuid())
  studentId         String   @unique
  extraversion      Int
  agreeableness     Int
  conscientiousness Int
  neuroticism       Int
  openness          Int
  completedAt       DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@map("big_five_results")
}

model StudentResponse {
  id            String        @id @default(uuid())
  studentId     String
  sessionId     String
  questionId    String
  responseValue ResponseValue
  answeredAt    DateTime      @default(now())

  student  Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  session  Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([studentId, questionId])
  @@index([studentId])
  @@index([sessionId])
  @@index([questionId])
  @@index([answeredAt])
  @@map("student_responses")
}

enum ResponseValue {
  YES
  NO
  UNKNOWN
}

model GroupActivity {
  id         String   @id @default(uuid())
  studentId  String
  sessionId  String
  selections Json
  freeText   String?  @db.Text
  createdAt  DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, sessionId])
  @@index([studentId])
  @@index([sessionId])
  @@map("group_activities")
}

model OpinionMapping {
  id             String   @id @default(uuid())
  sessionId      String   @unique
  mappingData    Json
  clusterData    Json
  conflictAreas  Json?
  consensusAreas Json?
  umapParams     Json?
  generatedAt    DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([generatedAt])
  @@map("opinion_mappings")
}

model LearningLog {
  id         String   @id @default(uuid())
  sessionId  String
  studentId  String
  goalKey    String   @db.VarChar(64)
  reflection String   @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  session Session        @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  student Student        @relation(fields: [studentId], references: [id], onDelete: Cascade)
  review  LearningReview?

  @@unique([studentId, goalKey])
  @@index([sessionId])
  @@index([studentId])
  @@map("learning_logs")
}

model LearningReview {
  id                  String   @id @default(uuid())
  learningLogId       String   @unique
  teacherId           String
  rubricUnderstanding Int
  rubricEvidence      Int
  rubricDialogue      Int
  comment             String?  @db.Text
  reviewedAt          DateTime @default(now())
  updatedAt           DateTime @updatedAt

  learningLog LearningLog @relation(fields: [learningLogId], references: [id], onDelete: Cascade)
  teacher     Teacher     @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  @@index([teacherId])
  @@map("learning_reviews")
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String   @db.VarChar(100)
  resource   String?  @db.VarChar(100)
  resourceId String?
  details    Json?
  ipAddress  String?  @db.VarChar(45)
  userAgent  String?  @db.Text
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
  @@map("audit_logs")
}
